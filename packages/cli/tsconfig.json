{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "types": [
      "node",
      "react",
      "react-dom",
      "ink",
      "vitest/globals",
      "@google/gemini-cli-core",
      "@google/genai"
    ]
  },
  "include": [
    "index.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.json",
    "./package.json"
  ],
  "exclude": ["node_modules", "dist", "src/**/*.test.ts"],
  "references": [{ "path": "../core" }]
}
